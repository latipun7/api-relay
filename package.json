{
  "name": "api-relay",
  "description": "Latipun's API HTTP request relay collections ðŸ”„",
  "author": "LS <latifsulistyo.me@gmail.com> (https://ruppy.io)",
  "repository": "https://github.com/latipun7/api-relay.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && yarn test && yarn build:ts",
    "build:ts": "tsc",
    "dev": "nodemon",
    "jest": "jest --detectOpenHandles --passWithNoTests",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix --color --cache .",
    "pretty": "prettier --write .",
    "start": "pm2 --name api-relay --node-args \"-r dotenv/config\" start dist",
    "test": "yarn lint && yarn jest && yarn pretty"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.6",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.0",
    "eslint-config-ruppy-node": "^1.2.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{html,json,sass,scss,md}": "prettier --write"
  }
}
