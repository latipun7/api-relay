{
  "name": "api-relay",
  "description": "Latipun's API HTTP request relay collections ðŸ”„",
  "author": "LS <latifsulistyo.me@gmail.com> (https://ruppy.io)",
  "repository": "https://github.com/latipun7/api-relay.git",
  "license": "MIT",
  "private": true,
  "directories": {
    "lib": "src"
  },
  "engines": {
    "node": ">=12.8.3",
    "yarn": ">=1.19.0"
  },
  "scripts": {
    "build": "yarn test && tsc",
    "dev": "nodemon",
    "jest": "jest --detectOpenHandles",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix --color --cache .",
    "pretty": "prettier --write .",
    "start": "pm2 --name api-relay --node-args \"-r ./tsconfig-paths-bootstrap.js -r dotenv/config\" start dist/src",
    "test": "rimraf dist && yarn lint && yarn pretty && yarn jest"
  },
  "dependencies": {
    "@feathersjs/configuration": "^4.5.3",
    "@feathersjs/errors": "^4.5.3",
    "@feathersjs/express": "^4.5.4",
    "@feathersjs/feathers": "^4.5.3",
    "axios": "^0.20.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "helmet": "^4.1.0",
    "tsconfig-paths": "^3.9.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^26.0.12",
    "@types/serve-favicon": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-ruppy-node": "^1.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "echo \"commit-msg hook\" && echo $HUSKY_GIT_PARAMS > hook-params"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{html,json,sass,scss,md}": "prettier --write"
  }
}
